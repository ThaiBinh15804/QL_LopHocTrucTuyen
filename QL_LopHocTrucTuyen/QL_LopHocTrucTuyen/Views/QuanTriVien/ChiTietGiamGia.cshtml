@model QL_LopHocTrucTuyen.Models.GiamGia
@using QL_LopHocTrucTuyen.Models
@{
    ViewBag.Title = "ChiTietGiamGia";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

<div>
    <div style="padding:8px 20px;">
        <div class="d-flex gap-2 mt-2">
            <i style="color: #343a40" class="fa-solid fa-house"></i>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #343a40">Danh sách mã giảm giá khóa học</span>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #000; ">Chi tiết</span>
        </div>
        <div class="d-flex justify-content-between">
            <h1 style="font-size: 22px; font-weight: 600; color: #000; margin-top: 20px; display: block">Thông tin mã giám giá khóa học</h1>
            <div>
                <a href="/QuanTriVien/XoaGiamGia?maGG=@Model.MaGiamGia" class="btn btn-danger" id="btnXoaKhoaHoc" data-makh="@Model.MaGiamGia">
                    Xóa mã giảm giá
                </a>
            </div>
        </div>
        <div style="background-color: #fff; border-radius: 5px; width: 100%; margin-top: 10px; padding: 16px; border: 1px solid #dadada; width: 100%;">
            <form class="myForm" action="/QuanTriVien/ChiTietGiamGia" method="post">
                <div style="width: 100%;">
                    <div class="d-flex justify-content-between gap-4">
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="MaKhoaHoc">Mã giảm giá: </label>
                            @Html.TextBoxFor(model => model.MaGiamGia, new { @readonly = "readonly", @id = "MaKhoaHoc", @class = "form-control mt-2", placeholder = "Nhập mã giảm giá" })
                        </div>
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="TenGiamGia">Tên mã giảm giá: </label>
                            @Html.TextBoxFor(model => model.TenGiamGia, new { @readonly = "readonly", @id = "TenGiamGia", @class = "form-control mt-2", placeholder = "Nhập tên giảm giá" })
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-between gap-4">
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="NgayBatDau">Ngày bắt đầu: </label>
                            @Html.TextBoxFor(model => model.NgayBatDau, new
                                  {
                                      @readonly = "readonly",
                                      @type = "date",
                                      @id = "NgayBatDau",
                                      @class = "form-control mt-2",
                                      Value = Model.NgayBatDau.HasValue ? Model.NgayBatDau.Value.ToString("yyyy-MM-dd") : ""
                                  })
                        </div>
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="NgayBatDau">Ngày kết thúc: </label>
                            @Html.TextBoxFor(model => model.NgayKetThuc, new
                                  {
                                      @readonly = "readonly",
                                      @type = "date",
                                      @id = "NgayKetThuc",
                                      @class = "form-control mt-2",
                                      Value = Model.NgayKetThuc.HasValue ? Model.NgayKetThuc.Value.ToString("yyyy-MM-dd") : ""
                                  })
                        </div>
                    </div>

                    <div style="margin-top: 15px;" class="d-flex justify-content-between gap-4">
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="PhanTramGiam">Tỉ lệ giảm: </label>
                            @Html.TextBoxFor(model => model.PhanTramGiam, new { @readonly = "readonly", @id = "PhanTramGiam", @class = "form-control mt-2", placeholder = "Nhập mã giảm giá" })
                        </div>
                    </div>
                </div>
                <div style="margin-top: 10px; width: 100%" class="d-flex justify-content-end gap-2">
                    <button id="btnSua" type="button" class="btn btn-primary">Sửa</button>
                    <button id="btnLuu" type="submit" disabled class="btn btn-success">Lưu</button>
                </div>
            </form>
        </div>
        @Html.Action("DanhSachGiamGiaThuocKhoaHoc")
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mt-2 alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                    @TempData["SuccessMessage"]
            </div>
        }
    </div>
</div>