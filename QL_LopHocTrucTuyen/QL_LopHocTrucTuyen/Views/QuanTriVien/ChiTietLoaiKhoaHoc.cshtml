@model QL_LopHocTrucTuyen.Models.LoaiKhoaHoc
@using QL_LopHocTrucTuyen.Models;
@{
    ViewBag.Title = "ChiTietLoaiKhoaHoc";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

<div>
    <div style="padding:8px 20px;">
        <div class="d-flex gap-2 mt-2">
            <i style="color: #343a40" class="fa-solid fa-house"></i>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #343a40">Danh sách thể loại khóa học</span>
            <i class="fa-solid fa-angle-right"></i>
            <span style="color: #000; ">Chi tiết</span>
        </div>
        <h1 style="font-size: 22px; font-weight: 600; color: #000; margin-top: 20px; display: block">Thông tin thể loại khóa học</h1>
        <div style="background-color: #fff; border-radius: 5px; width: 100%; margin-top: 10px; padding: 16px; border: 1px solid #dadada; width: 100%;">
            <form class="myForm4" action="/QuanTriVien/ChiTietLoaiKhoaHoc" method="post">
                <div style="width: 100%;">
                    <div class="d-flex justify-content-between gap-4">
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="MaLoai">Mã loại: </label>
                            @Html.TextBoxFor(model => model.MaLoaiKhoaHoc, new { @readonly = "readonly", @id = "MaLoai", @class = "form-control mt-2", placeholder = "Nhập tên loại" })
                            <span style="min-height: 20px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errTenLoai"></span>
                        </div>
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="TenLoai">Tên loại: </label>
                            @Html.TextBoxFor(model => model.TenLoai, new { @readonly = "readonly", @id = "TenLoai", @class = "form-control mt-2", placeholder = "Nhập tên loại" })
                            <span style="min-height: 20px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errTenLoai"></span>
                        </div>
                    </div>
                        <div style="width: 100%">
                            <label style="font-size: 15px; color: #374151; font-weight: 500;" for="MoTa">Mô tả: </label>
                            @Html.TextBoxFor(model => model.MoTa, new {@readonly = "readonly", @id = "MoTa", @class = "form-control mt-2", placeholder = "Nhập mô tả" })
                            <span style="min-height: 20px; display: inline-block; color: red; font-size: 14px; margin-top: 5px;" class="errMoTa"></span>
                        </div>
                </div>
                <div style="margin-top: 10px; width: 100%" class="d-flex justify-content-end gap-2">
                    @if (Session["user"] != null)
                    {
                        NguoiDung user2 = Session["user"] as NguoiDung;
                        if (user2.MaNhom == "NN004")
                        {
                            <button onclick="showPermissionAlert(event)" id="btnSua" type="button" class="btn btn-primary">Sửa</button>
                        }
                        else
                        {
                            <button id="btnSua" type="button" class="btn btn-primary">Sửa</button>    
                        }
                    }
                    <button id="btnLuu" type="submit" disabled class="btn btn-success">Lưu</button>
                </div>

            </form>
        </div>
        <h1 style="font-size: 22px; font-weight: 600; color: #000; margin-top: 20px; display: block">Danh sách khóa học</h1>
        @Html.Action("DanhSachKhoaHocThuocLoaiKH", new { id=@Model.MaLoaiKhoaHoc})
        <div class="mt-2">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
</div>

