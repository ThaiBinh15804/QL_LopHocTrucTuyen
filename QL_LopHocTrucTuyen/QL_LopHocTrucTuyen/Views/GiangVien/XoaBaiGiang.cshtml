@model QL_LopHocTrucTuyen.Models.BaiGiang


<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center text-danger mb-4">Bạn có chắc muốn xoá bài giảng này?</h3>
            <hr />
            <div class="mb-3">
                <strong>Tên bài giảng: </strong>
                <p>@Model.TenBaiGiang</p>
            </div>
            <hr />
            @using (Html.BeginForm("XuLyXoaBaiGiang", "GiangVien", FormMethod.Post, new { @class = "text-center mt-3" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="mabg" value="@Model.MaBaiGiang" />
                <div class="d-flex justify-content-center gap-3">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <a href="#" class="btn btn-secondary btn-lg ms-2" data-bs-dismiss="modal">Quay lại danh sách</a>
                </div>
            }
        </div>
    </div>
</div>
