@model IEnumerable<QL_LopHocTrucTuyen.Models.DanhGia>


<div class="container">
    <h2 class="my-3">Đánh giá</h2>
    @if (Model.Any())
    {
        <div id="commentSection">
            @foreach (var comment in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="~/Content/HinhAnh/Avatar/@comment.DangKy.ChiTietThanhToan.ThanhToan.HocVien.NguoiDung.AnhDaiDien"
                                 alt="avatar"
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" />
                            <div>
                                <h6 class="fw-bold text-primary mb-1">
                                    <span>@comment.DangKy.ChiTietThanhToan.ThanhToan.HocVien.HoTen</span>
                                </h6>
                                <p class="text-muted small mb-0">@DateTime.Parse(comment.NgayDanhGia.ToString()).ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-start mt-3 mb-4 pb-2">
                            <p class="mb-0">@comment.NhanXet</p>
                        </div>


                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Chưa có bình luận nào.</p>
    }
</div>
