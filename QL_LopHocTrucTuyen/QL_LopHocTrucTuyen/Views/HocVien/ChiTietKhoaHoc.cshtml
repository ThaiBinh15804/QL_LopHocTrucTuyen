@using QL_LopHocTrucTuyen.Models;
@using System.Globalization;
@model  QL_LopHocTrucTuyen.Models.KhoaHoc

@{
    ViewBag.Title = "Chi Tiết Khóa Học - " + Model.TenKhoaHoc;
    Layout = "~/Views/Shared/_LayoutHocVien.cshtml";
    var toastMessage = TempData["ToastMessage"] as string;
}

<div class="container mt-4">
    <div class="row">
        <!-- Cột trái: Ảnh bìa khóa học và thông tin nhanh -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="~/Content/HocVien/Images/@Model.AnhBia" alt="Ảnh khóa học" class="card-img-top rounded">
                <div class="card-body text-center">
                    <h5 class="card-title text-danger fw-bold">@String.Format(CultureInfo.InvariantCulture, "{0:N0} đ", Model.Gia)</h5>
                    <p class="text-muted"><strong>Đánh giá:</strong> 4.9 <i class="bi bi-star-fill text-warning"></i> (265 xếp hạng)</p>
                    <div class="d-flex flex-column align-items-center">

                        @if (Session["UserId"] == null)
                        {  <!-- Kiểm tra xem người dùng đã đăng nhập chưa -->
                            <!-- Nếu chưa đăng nhập, hiển thị nút đăng nhập -->
                            <button class="btn btn-primary mb-2" style="width: 70%;" onclick="window.location.href='/HocVien/DangNhap'">Đăng nhập để tiếp tục</button>
                        }
                        else
                        {
                            <!-- Nếu đã đăng nhập -->
                            if (ViewBag.IsPaid)
                            {
                                <button class="btn btn-primary mb-2" style="width: 70%;" onclick="window.location.href='/HocVien/HocTap'">Chuyển đến trang học tập</button>
                            }
                            else
                            {
                                <!-- Nếu chưa thanh toán, hiển thị nút Thêm vào giỏ hàng và Mua ngay -->
                                <button class="btn btn-primary mb-2" style="width: 70%;" id="addToCartBtn" onclick="addToCart(@Model.MaKhoaHoc)">Thêm vào giỏ hàng</button>
                                <button class="btn btn-success" style="width: 70%;" onclick="buyNow(@Model.MaKhoaHoc)">Mua ngay</button>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>

        <!-- Cột phải: Thông tin chi tiết khóa học -->
        <div class="col-md-8">
            <h1 class="mb-3">@Model.TenKhoaHoc</h1>
            <p><strong>Giảng viên:</strong> @Model.GiangVien.HoTen</p>
            <p><strong>Loại khóa học:</strong> @Model.LoaiKhoaHoc.MoTa</p>

            <hr>

            <h4>Mô tả khóa học</h4>
            <p>@Model.MoTa</p>

            <hr>

            <h4>Nội dung bài học</h4>
            <p>@Model.Chuongs.Count phần - @Model.Chuongs.Sum(ch => ch.BaiGiangs.Count) bài giảng - Tổng thời lượng: 25 giờ 33 phút</p>

            <!-- Nội dung chi tiết từng chương và bài giảng -->
            <div class="accordion" id="courseContent">
                @foreach (var chuong in Model.Chuongs)
                {
                    <div class="accordion-item border-0">
                        <h2 class="accordion-header" id="heading-@chuong.MaChuong">
                            <button class="accordion-button collapsed bg-light text-dark fw-bold d-flex align-items-center" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@chuong.MaChuong" aria-expanded="false" aria-controls="collapse-@chuong.MaChuong" style="box-shadow: none;">
                                @chuong.TenChuong (@chuong.BaiGiangs.Count bài giảng)
                            </button>
                        </h2>
                        <div id="collapse-@chuong.MaChuong" class="accordion-collapse collapse" aria-labelledby="heading-@chuong.MaChuong" data-bs-parent="#courseContent">
                            <div class="accordion-body bg-white">
                                <ul class="list-group list-group-flush">
                                    @foreach (var baiGiang in chuong.BaiGiangs)
                                    {
                                        <li class="list-group-item d-flex align-items-center bg-light border-0">
                                            <i class="bi bi-play-circle text-warning me-2" style="font-size: 1.2rem;"></i>
                                            <span class="fw-bold">@baiGiang.TenBaiGiang</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <hr>
            <h4>Thông tin khóa học</h4>
            <p><strong>Ngày bắt đầu:</strong> @(Model.NgayBatDau.HasValue ? Model.NgayBatDau.Value.ToString("dd/MM/yyyy") : "Chưa xác định")</p>
            <p><strong>Ngày kết thúc:</strong> @(Model.NgayKetThuc.HasValue ? Model.NgayKetThuc.Value.ToString("dd/MM/yyyy") : "Chưa xác định")</p>

            <hr>

            <h4>Đánh giá và nhận xét</h4>
            <div>
                <p><strong>4.6</strong> <i class="bi bi-star-fill text-warning"></i> (265 xếp hạng)</p>
                <p>Cho các học viên khác biết trải nghiệm của bạn với khóa học này!</p>
                <button class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#danhGiaModal">Sửa đánh giá của bạn</button>
            </div>

            <!-- Danh sách các nhận xét -->
            <div class="ms-4" id="commentsSection">
                <!-- Các nhận xét sẽ được thêm vào đây -->
            </div>

            <!-- Modal đánh giá -->
            <div class="modal fade" id="danhGiaModal" tabindex="-1" aria-labelledby="danhGiaModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="danhGiaModalLabel">Đánh Giá Khóa Học</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Giúp các học viên khác bằng cách chia sẻ trải nghiệm của bạn.</p>
                            <div>
                                <label for="rate">Xếp hạng khóa học này</label>
                                <select id="rate" class="form-control">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <option value="@i">@i sao</option>
                                    }
                                </select>
                            </div>
                            <div class="mt-3">
                                <label for="nhanXet">Đánh giá khóa học này</label>
                                <textarea id="nhanXet" class="form-control" rows="3" placeholder="Nhập đánh giá của bạn"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="button" class="btn btn-primary" onclick="luuDanhGia(@Model.MaKhoaHoc)">Gửi</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Phần tử toast luôn hiện diện trong DOM nhưng ẩn ban đầu -->
            <div class="toast-container position-fixed top-0 end-0 p-3">
                <div id="toastMessage" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" style="display: none;">
                    <div class="d-flex">
                        <div class="toast-body">
                            @toastMessage
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="progress" style="height: 5px;">
                        <div class="progress-bar bg-gradient progress-bar-animated" id="progressBar" role="progressbar" style="width: 100%;"></div>
                    </div>
                </div>
            </div>

            @section Scripts {
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script>
        function addToCart(maKhoaHoc) {
            $.post('/HocVien/ThemVaoGioHang', { id: maKhoaHoc }, function(response) {
                if (response.success) {
                    showToast(response.message); // Hiển thị thông báo thành công
                } else {
                    alert(response.message); // Hiển thị thông báo lỗi nếu có
                }
            });
        }
        function buyNow(maKhoaHoc) {
            $.post('/HocVien/MuaNgay', { id: maKhoaHoc }, function(response) {
                if (response.success) {
                    // Chuyển hướng đến trang giỏ hàng sau khi thêm thành công
                    window.location.href = '/HocVien/GioHang';
                } else {
                    alert(response.message);
                }
            });
        }

        function showToast(message) {
            let toastElement = document.getElementById("toastMessage");
            let progressBar = document.getElementById("progressBar");
            toastElement.querySelector(".toast-body").innerText = message;
            toastElement.style.display = 'block';
            progressBar.style.width = "100%";
            progressBar.style.transition = "width 1.5s linear";

            var toast = new bootstrap.Toast(toastElement, { delay: 1500 });
            toast.show();

            setTimeout(function () {
                progressBar.style.width = "0%";
            }, 10);
        }

        function luuDanhGia(maKhoaHoc) {
            const rate = $('#rate').val();
            const nhanXet = $('#nhanXet').val();
            $.post('/HocVien/LuuDanhGia', { maKhoaHoc: maKhoaHoc, rate: rate, nhanXet: nhanXet }, function (response) {
                if (response.success) {
                    $('#danhGiaModal').modal('hide');
                    const username = response.userName;
                    const commentDate = new Date().toLocaleDateString();
                    let existingComment = $('#commentsSection .comment[data-username="' + username + '"]');

                    if (existingComment.length > 0) {
                        // Nếu bình luận đã tồn tại, cập nhật nội dung của nó
                        existingComment.find('.rate').text('Đánh giá: ' + rate + ' ⭐');
                        existingComment.find('.comment-text').text(nhanXet);
                        existingComment.find('.comment-date').text(commentDate);
                    } else {
                        // Nếu bình luận chưa tồn tại, thêm bình luận mới
                        const newComment = $('<div class="comment mt-3" data-username="' + username + '">');
                        newComment.append('<p><strong>' + username + '</strong> - <span class="comment-date">' + commentDate + '</span></p>');
                        newComment.append('<p class="rate">Đánh giá: ' + rate + ' ⭐</p>');
                        newComment.append('<p class="comment-text">' + nhanXet + '</p>');
                        newComment.append('<hr>');
                        $('#commentsSection').prepend(newComment);
                    }
                    showToast("Đánh giá của bạn đã được lưu thành công!");
                    $('#rate').val(5);
                    $('#nhanXet').val('');
                } else {
                    alert(response.message);
                }
            });
        }

        function loadComments(maKhoaHoc) {
            $.get('/HocVien/LayDanhGiaKhoaHoc', { maKhoaHoc: maKhoaHoc }, function(danhGiaList) {
                $('#commentsSection').empty(); // Xóa các bình luận cũ để tránh trùng lặp

                // Duyệt qua danh sách các đánh giá và thêm chúng vào phần #commentsSection
                danhGiaList.forEach(function(danhGia) {
                    const comment = $('<div class="comment mt-3"></div>');
                    const userName = $('<p><strong>' + danhGia.UserName + '</strong> - ' + danhGia.NgayDanhGia + '</p>');
                    const rating = $('<p>Đánh giá: <strong>' + danhGia.Rate + '</strong> <i class="bi bi-star-fill text-warning"></i></p>');
                    const commentText = $('<p>' + danhGia.NhanXet + '</p>');

                    // Thêm các phần tử vào comment
                    comment.append(userName, rating, commentText, $('<hr>'));

                    // Thêm phần đánh giá vào #commentsSection
                    $('#commentsSection').append(comment);
                });
            });
        }

        function getDanhGia(maKhoaHoc) {
            $.get('/HocVien/GetDanhGia', { maKhoaHoc: maKhoaHoc }, function(response) {
                if (response.success) {
                    $('#rate').val(response.data.rate);
                    $('#nhanXet').val(response.data.nhanXet);
                } else {
                    $('#rate').val(5); // Mặc định 5 sao
                    $('#nhanXet').val('');
                }
            });
        }

        $(document).ready(function() {
            // Tải các đánh giá khi trang được tải
            loadComments(@Model.MaKhoaHoc);

            // Hiển thị modal đánh giá
            $('#danhGiaModal').on('show.bs.modal', function () {
                getDanhGia(@Model.MaKhoaHoc);
            });
        });
                </script>
            }
