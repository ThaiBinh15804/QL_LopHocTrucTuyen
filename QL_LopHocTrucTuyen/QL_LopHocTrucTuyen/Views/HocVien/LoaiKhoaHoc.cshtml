@model List<QL_LopHocTrucTuyen.Models.LoaiKhoaHoc>

@{
    ViewBag.Title = "LoaiKhoaHoc";
    Layout = null;
}

<hr class="my-0">
<div class="bg-white py-1 shadow-sm border-bottom mt-0">
    <div class="container">
        <ul class="nav justify-content-center mb-0">
            @foreach (var item in Model)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark text-decoration-underline-hover" href="@Url.Action("LocKhoaHoc", "HocVien", new { id = item.MaLoaiKhoaHoc })">
                        @item.TenLoai
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

<style>
    .text-decoration-underline-hover:hover {
        text-decoration: underline;
    }
</style>

